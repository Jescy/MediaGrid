<html xmlns:t="http://twistedmatrix.com/ns/twisted.web.template/0.1">
<head><title>Media Grid</title>
<meta content="text/html; charset=utf-8" http-equiv="Content-Type" />
<link href="/css/mediagrid.css" type="text/css" rel="stylesheet" />
</head>
<body id="mediagrid-chat">

<h1><a href="/" id="header">MediaGrid</a></h1>

<div id="chat">

<div id="fullscreen">
  <div id="popup">
    <div id="popupmsg"></div>
    <input type="text" id="name" name="name" autocomplete="off" value="Enter nickname">
    <div>
      <button id="okay" type="button">Okay</button>
      <button id="cancel" type="button">Cancel</button>
    </div>
  </div>
</div>

<div id="messages">
<script id="chatline" type="text/html">
      <div class='line'>
	<span class='epoch'>{{ epoch }}</span>
	<span class='time'>{{ time }}</span>
	<span class='user'>&lt;{{ user }}&gt;</span>
	<span class='msg'>{{ text }}</span>
      </div>
</script>
<script id="newuser" type="text/html">
      <div class='line'>
	<span class='epoch'>{{ epoch }}</span>
	<span class='time'>{{ time }}</span>
	<span class='join'>* {{ join }} has arrived *</span>
      </div>
</script>
<script id="userleft" type="text/html">
      <div class='line'>
	<span class='epoch'>{{ epoch }}</span>
	<span class='time'>{{ time }}</span>
	<span class='left'>* {{ left }} has left *</span>
      </div>
</script>
<script id="newnick" type="text/html">
      <div class='line'>
	<span class='epoch'>{{ epoch }}</span>
	<span class='time'>{{ time }}</span>
	<span class='nick'>* {{ old }} is now known as {{ nick }} *</span>
      </div>
</script>
</div>

<div id="users">
</div>

<div id="userinput">
<input type="text" id="inputbox" autocomplete="off" maxlength="512">
<button id="send" type="button">Send</button>
<button id="options" type="button"></button>
<div id="menu">
  <ul>
    <a id="changename" href="javascript:void(0);"><li>Change username</li></a>
    <a id="newroom" href="javascript:void(0);"><li>Create private room</li></a>
    <a id="joinroom" href="javascript:void(0);"><li>Join private room</li></a>
  </ul>
</div>
</div>
</div>

<script type="text/javascript" src="/js/jquery-1.7.2.min.js"></script>
<script type="text/javascript" src="/js/jquery-ui-1.8.21.custom.min.js"></script>
<script type="text/javascript" src="/js/ICanHaz.min.js"></script>
<script type="text/javascript" src="/js/chat.js"></script>


</body></html>
